    <div class="login">
      <div class="container">
        <h1>Create a new account</h1>
    
        <div class="login-form">
          <form action="/admin/sign-up" method="POST">
            <input type="text" name="username" placeholder="Username">
            <input type="password" name="password" placeholder="Password">

